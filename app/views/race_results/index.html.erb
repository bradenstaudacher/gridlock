<p id="notice"><%= notice %></p>

<h1>Race Results</h1>

<table>
  <thead>
    <tr>
      <th>Driver</th>
      <th>Race</th>
      <th>Position</th>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @race_results.each do |race_result| %>
      <tr>
        <td><%= race_result.driver_id %></td>
        <td><%= race_result.race_id %></td>
        <td><%= race_result.position %></td>
        <td><%= race_result.points %></td>
        <td><%= link_to 'Show', race_result %></td>
        <td><%= link_to 'Edit', edit_race_result_path(race_result) %></td>
        <td><%= link_to 'Destroy', race_result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Race Result', new_race_result_path %>
